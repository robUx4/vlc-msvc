Subject: [PATCH 19/99] contribs: flac: Provide NO_DLL flag when building on
 windows

---
 contrib/src/flac/rules.mak | 4 ++++
 1 file changed, 4 insertions(+)

diff --git a/contrib/src/flac/rules.mak b/contrib/src/flac/rules.mak
index 53cf8e0..ede1bb5 100644
--- a/contrib/src/flac/rules.mak
+++ b/contrib/src/flac/rules.mak
@@ -47,6 +47,10 @@ ifdef HAVE_WIN32
 FLAC_CFLAGS += -mstackrealign
 endif
 
+ifdef HAVE_WIN32
+	FLACCFLAGS="-DFLAC__NO_DLL"
+endif
+
 DEPS_flac = ogg $(DEPS_ogg)
 
 .flac: flac
