Subject: [PATCH 21/75] HACK: contribs: libav/ffmpeg: Fix build using visual
 studio

---
 contrib/src/ffmpeg/rules.mak | 5 +++--
 1 file changed, 3 insertions(+), 2 deletions(-)

diff --git a/contrib/src/ffmpeg/rules.mak b/contrib/src/ffmpeg/rules.mak
index d9a9d5c..f201b7d 100644
--- a/contrib/src/ffmpeg/rules.mak
+++ b/contrib/src/ffmpeg/rules.mak
@@ -17,7 +17,7 @@ FFMPEGCONF = \
 	--pkg-config="$(PKG_CONFIG)" \
 	--disable-doc \
 	--disable-encoder=vorbis \
-	--enable-libgsm \
+	--disable-libgsm \
 	--enable-libopenjpeg \
 	--disable-debug \
 	--disable-avdevice \
@@ -170,7 +170,8 @@ $(TARBALLS)/ffmpeg-$(HASH).tar.gz:
 ffmpeg: ffmpeg-$(HASH).tar.gz .sum-ffmpeg
 	rm -Rf $@ $@-$(HASH)
 	mkdir -p $@-$(HASH)
-	$(ZCAT) "$<" | (cd $@-$(HASH) && tar xv --strip-components=1)
+	touch $@-$(HASH)/README.md
+	tar xvf $< -C $@-$(HASH) --strip-components=1 -l --ignore-command-error
 	$(MOVE)
 
 .ffmpeg: ffmpeg
