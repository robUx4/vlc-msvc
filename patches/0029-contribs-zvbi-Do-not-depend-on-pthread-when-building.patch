Subject: [PATCH 29/82] contribs: zvbi: Do not depend on pthread when building
 with MSVC

---
 contrib/src/zvbi/rules.mak | 7 ++++++-
 1 file changed, 6 insertions(+), 1 deletion(-)

diff --git a/contrib/src/zvbi/rules.mak b/contrib/src/zvbi/rules.mak
index aac57f4..6e5e26a 100644
--- a/contrib/src/zvbi/rules.mak
+++ b/contrib/src/zvbi/rules.mak
@@ -28,7 +28,12 @@ ifdef HAVE_ANDROID
 endif
 	$(MOVE)
 
-DEPS_zvbi = pthreads iconv $(DEPS_iconv)
+DEPS_zvbi = iconv $(DEPS_iconv)
+ifdef HAVE_WIN32
+ifdef HAVE_VISUALSTUDIO
+DEPS_zvbi += pthreads
+endif
+endif
 
 ZVBI_CFLAGS := $(CFLAGS)
 ZVBICONF := \
